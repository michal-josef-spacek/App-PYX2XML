#!/usr/bin/env perl

use strict;
use warnings;

use App::PYX2XML;

our $VERSION = 0.04;

# Run.
App::PYX2XML->new->run;

# Print version.
sub VERSION_MESSAGE {
	print $VERSION."\n";
	exit 0;
}

__END__

=pod

=encoding utf8

=head1 NAME

pod2xml - Script to convert PYX to XML.

=head1 SYNOPSIS

 pyx2xml [-e in_enc] [-h] [-i] [--version] [filename] [-]

=head1 DESCRIPTION

 pyx2xml script uses PYX::SGML::Tags class to create XML output of PYX.

=head1 ARGUMENTS

=over 8

=item * C<-e in_enc>

 Input encoding.
 Default value is 'utf-8'.

=item * C<-h>

 Print help.

=item * C<-i>

 Indent output.

=item * C<--version>

 Print version of script.

=item * C<filename>

 Input file in PYX format.

=item * C<->

 Stdin with PYX input.

=back

=head1 EXAMPLE1

 pyx2xml

 # Output:
 # Usage: pyx2xml [-e in_enc] [-h] [-i] [--version] [filename] [-]
 #         -e in_enc       Input encoding (default value is utf-8).
 #         -h              Print help.
 #         -i              Indent output.
 #         --version       Print version.
 #         [filename]      Process on filename
 #         [-]             Process on stdin

=head1 EXAMPLE2

 cat <<END | pyx2xml -
 (element
 -foo
 )element
 END

 # Output:
 # <element>foo</element>

